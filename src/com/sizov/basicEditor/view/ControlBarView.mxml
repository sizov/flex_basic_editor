<?xml version="1.0" encoding="utf-8"?>
<s:Group
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:spicefactory="http://www.spicefactory.org/parsley">

	<fx:Script>
		<![CDATA[
		import com.sizov.basicEditor.model.ControlBarModel;

		[Bindable]
		public var model:ControlBarModel;
		]]>
	</fx:Script>

	<fx:Declarations>
		<spicefactory:FastInject
			property="model"
			type="{ControlBarModel}"/>
	</fx:Declarations>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center"/>
	</s:layout>

	<s:Button
		label="Add Skinnable rectangle"
		click="model.addSkinnableRectangle()"/>
	<s:Button
		label="Add Skinnable text"
		click="model.addSkinnableText()"/>
	<s:Button
		label="Clear canvas"
		click="model.clearCanvasHandler()"/>

</s:Group>