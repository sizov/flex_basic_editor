<?xml version="1.0" encoding="utf-8"?>
<s:Group
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:spicefactory="http://www.spicefactory.org/parsley"
    xmlns:components="com.sizov.basicEditor.components.*">

    <fx:Script>
		<![CDATA[
        import com.sizov.basicEditor.model.CanvasModel;

        [Bindable]
        /**
         * Presentation Model that controls current view.
         */
        public var model:CanvasModel;
        ]]>
	</fx:Script>

    <fx:Declarations>
        <spicefactory:FastInject
            property="model"
            type="{CanvasModel}"/>
    </fx:Declarations>

    <s:layout>
        <s:VerticalLayout horizontalAlign="center"/>
    </s:layout>

    <components:ShapesCanvas
        id="shapesCanvas"
        mode="{model.canvasMode}"
        dataProvider="{model.shapesDataProvider}"
        backgroundColor="0xdddddd"
        width="100%"
        height="100%"/>

</s:Group>
